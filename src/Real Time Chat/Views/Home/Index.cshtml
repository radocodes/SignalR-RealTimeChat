@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Chat application demo. Working with SignalR.</p>
</div>

@*join to chat room form*@
<div id="join-room">
    <h3>Join to chat room</h3>
    <form method="post" asp-controller="Home" asp-action="chatRoom">
        <div class="form-group" style="width:30%">
            <div class="col-12">Room Name</div>
            <div><input type="text" name="roomName" class="form-control" /></div>
        </div>
        <div class="row">&nbsp;</div>
        <div class="form-group">
            <div class="col-6">
                <input type="submit" value="Submit" class="btn btn-info" />
            </div>
        </div>
    </form>
</div>

@*form - message to everybody*@
<div id="message-form">
        <h3>Chat with everybody here</h3>
        <form>
            <div class="form-group">
                <div class="col-12">Message</div>
                <div><textarea type="text" id="messageInput" class="form-control"></textarea></div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="form-group">
                <div class="col-6">
                    <input type="button" id="sendButton" value="Send Message" class="btn btn-info"/>
                </div>
            </div>
        </form>
</div>

@*messages list from everybody*@
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row messages-list">
    <div class="col-6">
        <ul id="messagesList"></ul>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
